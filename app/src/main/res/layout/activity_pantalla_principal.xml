<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/banner"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_marginTop="22dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:src="@drawable/distintivo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:contentDescription="@string/logotipo" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/tesaka_logo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:contentDescription="@string/logotesaka" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/banner"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LogoLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ic_usersLogo"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_users"
                    android:foregroundGravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nombreLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LogoLayout">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_usersLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:text="GOMEZ HONIG ALEXIS DANIEL"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="50dp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:id="@+id/detalles1Layout"
                android:layout_below="@id/nombreLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvRUCLabel"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="RUC: " />

                <TextView
                    android:id="@+id/tvRUC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4380376"
                    android:paddingRight="20dp"/>
                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="DV" />
                <TextView
                    android:id="@+id/tvDV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:paddingRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="50dp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:id="@+id/detalles2Layout"
                android:layout_below="@id/detalles1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEstablecimientoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Establecimiento: " />

                <TextView
                    android:id="@+id/tvEstablecimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="001"
                    android:paddingRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:paddingLeft="50dp"
                android:gravity="left"
                android:id="@+id/detalles3Layout"
                android:layout_below="@id/detalles2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDireccionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direccion: " />

                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGAVI 981 C GONDRA"
                    android:paddingRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:paddingLeft="50dp"
                android:gravity="left"
                android:id="@+id/detalles4Layout"
                android:layout_below="@id/detalles3Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTimbradoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timbrado: " />

                <TextView
                    android:id="@+id/tvTimbrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    android:paddingRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:paddingLeft="50dp"
                android:gravity="left"
                android:id="@+id/detalles5Layout"
                android:layout_below="@id/detalles4Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvLicenciaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licencia Hasta: " />

                <TextView
                    android:id="@+id/tvLicencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="31/05/2020" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/detalles6Layout"
                android:layout_below="@id/detalles5Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/btnFacturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_azul"
                android:drawableStart="@drawable/ic_file_alt"
                android:text="Facturas"
                android:textColor="#ffff" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/detalles7Layout"
                android:layout_below="@id/detalles6Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/btnEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_btn_azul"
                    android:drawableStart="@drawable/ic_pencil_alt"
                    android:text="Editar Contribuyente"
                    android:textColor="#ffff" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>